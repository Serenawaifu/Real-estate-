# DGrealtors Local Environment Variables

# General Settings
NODE_ENV=development
PORT=5173

# API Configuration
API_URL=http://localhost:5000/api
API_KEY=your_local_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=local_db_user
DB_PASSWORD=local_db_password
DB_NAME=dgrealtors_local_db

# Authentication
JWT_SECRET=your_local_jwt_secret
JWT_EXPIRATION=1h

# Third-party Services
GOOGLE_MAPS_API_KEY=your_local_google_maps_api_key
SENDGRID_API_KEY=your_local_sendgrid_api_key
STRIPE_API_KEY=your_local_stripe_api_key

# Feature Flags
FEATURE_FLAG_NEW_UI=true
FEATURE_FLAG_ENABLE_ANIMATIONS=true

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/local_app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# PWA Configuration
PWA_THEME_COLOR=#ffe5b4
PWA_BACKGROUND_COLOR=#ffffff

# Other Settings
ENABLE_DEBUG_MODE=true
